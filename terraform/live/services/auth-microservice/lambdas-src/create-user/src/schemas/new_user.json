{
  "definitions": {}, 
  "$schema": "http://json-schema.org/draft-07/schema#", 
  "type": "object", 
  "title": "New User Schema", 
  "required": [
    "full_name",
    "email",
    "mobile_phone_number"
  ],
  "properties": {
    "full_name": {
      "$id": "#/properties/full_name", 
      "type": "string", 
      "title": "The user full name",
      "examples": [
        "42 Son of 42"
      ]
    },
    "email": {
      "$id": "#/properties/email", 
      "type": "string", 
      "title": "The user email",
      "examples": [
        "my-email@mail42.com"
      ]
    },
    "mobile_phone_number": {
      "$id": "#/properties/mobile_phone_number", 
      "type": "string", 
      "title": "The user mobile phone number", 
      "pattern": "^\\+[0-9]{1,14}$",
      "examples": [
        "+33612345678"
      ]
    }
  },
  "additionalProperties": false
}
